{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "commitMessagePrefix": "Packages -",
  "dependencyDashboard": true,
  "extends": ["config:base"],
  "prConcurrentLimit": 10,
  "platformAutomerge": true,
  "packageRules": [
    {
      "extends": ["group:allNonMajor"],
      "automerge": false,
      "matchManagers": ["npm"]
    },
    {
      "automerge": true,
      "description": "All Github maintained actions",
      "groupName": "all non-major github actions dependencies",
      "groupSlug": "all-minor-patch-actions-core",
      "matchManagers": ["github-actions"],
      "matchPackagePrefixes": ["actions"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "rebaseWhen": "behind-base-branch"
    }
  ]
}
